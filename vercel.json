{
  "version": 2,
  "builds": [
    {
      "src": "frontend/package.json",
      "use": "@vercel/static-build",
      "config": {
        "distDir": "frontend/build" 
      }
    }
  ],
  "routes": [
    {
      "src": "/api/(.*)",
      "dest": "/api/$1" 
    },
    
    {
      "src": "/",
      "dest": "frontend/build/index.html" 
    },
    
    {
      "src": "/(.*)",
      "dest": "frontend/build/$1"
    }
  ]
}